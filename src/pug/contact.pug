doctype html
html(lang='es')

    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')

        title Pablo Moya - Contacto

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        include includes/css.pug

    body.d-flex.flex-column

        main.flex-shrink-0

            // Navigation
            include includes/navbar.pug

            // Page content
            section.py-5

                .container.px-5

                    // Contact form
                    .bg-light.rounded-4.py-5.px-4.px-md-5
                        .text-center.mb-5
                            .feature.bg-primary.bg-gradient-primary-to-secondary.text-white.rounded-3.mb-3
                                i.bi.bi-envelope
                            h1.fw-bolder Ponte en contacto
                            p.lead.fw-normal.text-muted.mb-0 ¡Trabajemos juntos!
                        .row.gx-5.justify-content-center
                            .col-lg-8.col-xl-6

                                // Formulario de contacto con Formspree
                                form(action='https://formspree.io/f/xrgjwgyl', method='POST')

                                    // Name input
                                    .form-floating.mb-3
                                        input#name.form-control(
                                            type='text',
                                            name='name',
                                            placeholder='Ingresa tu nombre...',
                                            required
                                        )
                                        label(for='name') Nombre completo
                                    
                                    // Email address input
                                    .form-floating.mb-3
                                        input#email.form-control(
                                            type='email',
                                            name='email',
                                            placeholder='nombre@ejemplo.com',
                                            required
                                        )
                                        label(for='email') Correo electrónico
                                    
                                    // Phone number input
                                    .form-floating.mb-3
                                        input#phone.form-control(
                                            type='tel',
                                            name='phone',
                                            placeholder='(123) 456-7890'
                                        )
                                        label(for='phone') Número de teléfono
                                    
                                    // Message input
                                    .form-floating.mb-3
                                        textarea#message.form-control(
                                            name='message',
                                            placeholder='Escribe tu mensaje aquí...',
                                            style='height: 10rem;',
                                            required
                                        )
                                        label(for='message') Mensaje

                                    // Submit Button
                                    .d-grid
                                        button.btn.btn-primary.btn-lg(type='submit') Enviar

        // Footer
        include includes/footer.pug

        include includes/scripts.pug
